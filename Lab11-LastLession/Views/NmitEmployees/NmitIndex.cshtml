@model IEnumerable<Lab11_LastLession.Models.NmitEmployee>

@{
    ViewData["Title"] = "NmitIndex";
}

<h1>Danh Sách Nhân Viên</h1>

<p>
    <a asp-action="NmitCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NmitEmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NmitEmpLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NmitEmpStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NmitEmpStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NmitEmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitEmpLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitEmpStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitEmpStatus)
            </td>
            <td>
                <a asp-action="NmitEdit" asp-route-id="@item.NmitEmpId">Edit</a> |
                <a asp-action="NmitDetails" asp-route-id="@item.NmitEmpId">Details</a> |
                <a asp-action="NmitDelete" asp-route-id="@item.NmitEmpId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
