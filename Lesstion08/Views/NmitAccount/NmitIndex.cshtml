                @Html.DisplayFor(modelItem => item.NmitGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitFacebook)
            </td>
                <td class="text-center">
                @Html.ActionLink("Edit", "NmitEdit", new { id=item.Id }) 
                    @Html.ActionLink("Details", "NmitDetails", new { id = item.Id }) 
