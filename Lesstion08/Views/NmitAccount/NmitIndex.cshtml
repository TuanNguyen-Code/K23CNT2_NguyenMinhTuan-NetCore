                @Html.DisplayFor(modelItem => item.NmitFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmitAddress)
