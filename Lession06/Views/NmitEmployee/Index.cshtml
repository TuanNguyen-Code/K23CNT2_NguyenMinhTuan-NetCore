@model List<NmitEmployee>

@{
    ViewData["Title"] = "Danh sách Sinh Viên";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="NmitEmployee" asp-action="Create" class="btn btn-success">+ Thêm mới nhân viên</a>
</p>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Lương</th>
            <th>Trạng thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.NmitId</td>
                <td>@employee.NmitName</td>
                <td>@employee.NmitBirthDay.ToString("dd/MM/yyyy")</td>
                <td>@employee.NmitEmail</td>
                <td>@employee.NmitPhone</td>
                <td>@employee.NmitSalary.ToString("N0") VNĐ</td>
                <td>@(employee.NmitStatus ? "Đang làm" : "Nghỉ việc")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.NmitId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@employee.NmitId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
